{#% extends 'layout.twig' %#}

{% block nav %}
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalCenter">
  Create new article
</button>

<span class="navbar-text">
{{curl_result.username}} (Admin)
</span>

{% if page_name == 'dashboard' %}
<form method="post" action="leaveDash"><button class="btn btn-primary btn-sm">Site view</button></form>
{% else %}
<form method="post" action="dash"><button class="btn btn-primary btn-sm">Dashboard</button></form>
{% endif %}

<!-- <form method="post" action="dash"><button>Dashboard</button></form> -->

<form method="post" action="disconnect"><button class="btn btn-primary btn-sm mx-1">Disconnect</button></form>
<form method="post" action="dash"><button class="btn btn-primary ml-2">Dashboard</button></form>
<form method="post" action="disconnect"><button class="btn btn-secondary ml-2">disconnect</button></form>

<!-- Modal -->
          <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="exampleModalCenterTitle">Article Creation</h5>
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
                </div>
                <div class="modal-body">
                  <form method="post" action="new_article">
                    <p>Article title</p>
                    <input type="text" name="title"></input>

                    <p>Article content</p>
                    <textarea type="textarea" name="content" cols="55" rows="15"></textarea>

                    <p><input type="submit" name="log"></input></p>
                  </form>
                </div>
              </div>
            </div>
          </div>
{% endblock %}
